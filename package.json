    },
    "bugs": {
        "url": "https://github.com/your-username/keep-it-moving/issues"
    },
    "homepage": "https://github.com/your-username/keep-it-moving#readme",
    "engines": {
        "node": ">=16.0.0"
    },
    "os": [
        "darwin",
        "linux",
        "win32"
    ],
    "workspaces": [
        "server",
        "pwa",
        "extension",
        "cli"
    ],
    "devDependencies": {
        "concurrently": "^7.6.0"
