{
    "name": "kim-vscode-extension",
    "displayName": "Keep-It-Moving (KIM)",
    "description": "Send prompts to GitHub Copilot from any device - phone, tablet, or computer. Features embedded server, QR code pairing, and instant prompt delivery.",
    "version": "1.0.0",
    "publisher": "jmoncayo-pursuit",
    "engines": {
        "vscode": "^1.85.0"
    },
    "enabledApiProposals": [
        "chatProvider"
    ],
    "categories": [
        "Other",
        "Extension Packs"
    ],
    "keywords": [
        "copilot",
        "remote",
        "prompts",
        "mobile",
        "productivity",
        "github copilot",
        "ai",
        "chat",
        "qr code",
        "websocket"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "kim.showPairingCode",
                "title": "Show Pairing Code",
                "category": "KIM"
            },
            {
                "command": "kim.toggleServer",
                "title": "Toggle Relay Server",
                "category": "KIM"
            },
            {
                "command": "kim.showStatus",
                "title": "Show Status",
                "category": "KIM"
            },
            {
                "command": "kim.injectPrompt",
                "title": "Send Prompt to Copilot Chat",
                "category": "KIM"
            },
            {
                "command": "kim.openPanel",
                "title": "Open KIM Panel",
                "category": "KIM",
                "icon": "$(rocket)"
            }
        ],
        "views": {
            "explorer": [
                {
                    "id": "kimPanel",
                    "name": "Keep-It-Moving ðŸš€",
                    "when": "true"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "kimPanel",
                "contents": "Welcome to Keep-It-Moving! ðŸš€\n\nSend prompts from any device to VS Code Copilot.\n\n[ðŸš€ Open Control Panel](command:kim.openPanel)\n\n[ðŸ“± Quick Pairing Code](command:kim.showPairingCode)\n\nThe control panel gives you full access to all KIM features!"
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "kim.openPanel",
                    "when": "view == kimPanel",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "title": "Keep-It-Moving",
            "properties": {
                "kim.serverPort": {
                    "type": "number",
                    "default": 8080,
                    "description": "Port for the local relay server"
                },
                "kim.enableQuips": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable vibe check mode with fun quips"
                },
                "kim.autoStartServer": {
                    "type": "boolean",
                    "default": true,
                    "description": "Automatically start the relay server when VS Code opens"
                },
                "kim.pwaPort": {
                    "type": "number",
                    "default": 3000,
                    "description": "Port where the PWA is running (auto-detects if different)"
                }
            }
        }
    },
    "scripts": {
        "test": "echo 'No tests'",
        "package": "npx @vscode/vsce package"
    },
    "dependencies": {
        "qrcode": "^1.5.4",
        "uuid": "^9.0.1",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@types/vscode": "^1.85.0",
        "@types/ws": "^8.5.10",
        "@vscode/test-electron": "^2.3.8",
        "@vscode/vsce": "^3.6.0",
        "glob": "^10.3.10",
        "mocha": "^10.2.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/jmoncayo-pursuit/keep-it-moving"
    },
    "bugs": {
        "url": "https://github.com/jmoncayo-pursuit/keep-it-moving/issues"
    },
    "homepage": "https://github.com/jmoncayo-pursuit/keep-it-moving#readme",
    "license": "MIT",
    "icon": "icon.png",
    "galleryBanner": {
        "color": "#1a1a1a",
        "theme": "dark"
    }
}
